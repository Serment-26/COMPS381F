<%c.forEach(function(p) {%>
<!DOCTYPE html>
<html>
<title>Modify Restaurant</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
<body>

<div class="w3-container w3-teal">
  <h1>Modify Restaurant <%=p.name%></h1>
</div>

<form action="/modify" method="post" encType="multipart/form-data"
      class="w3-container" style="width:100%">
  <p>
  <input type="hidden" name="restid" value='<%=p._id%>'>
  <input type="hidden" name="userid" value='<%=p.owner%>'>
  <input name="name" class="w3-input" type="text" required value='<%=p.name%>'>
  <label class="w3-label w3-validate">Name</label></p>
  <p>
  <input name="cuisine"class="w3-input" type="text" value='<%=p.cuisine%>'>
  <label class="w3-label w3-validate">Cuisine</label></p>
  <p>
  <input name="street"class="w3-input" type="text" value='<%=p.address.street%>'>
  <label class="w3-label w3-validate">Street</label></p>
  <p>
  <p>
  <input name="building"class="w3-input" type="text" value='<%=p.address.building%>'>
  <label class="w3-label w3-validate">Building</label></p>
  <p>
  <p>
  <input name="zipcode"class="w3-input" type="text" value='<%=p.address.zipcode%>'>
  <label class="w3-label w3-validate">Zipcode</label></p>
  <p>
  <p>
  <input name="lon"class="w3-input" type="text" value='<%=p.address.coord.lon%>'>
  <label class="w3-label w3-validate">GPS Coordinates (lon.)</label></p>
  <p>
  <input name="lat"class="w3-input" type="text" value='<%=p.address.coord.lat%>'>
  <label class="w3-label w3-validate">GPS Coordinates (lat.)</label></p>
  <p>
  <input name="sampleFile"class="w3-input" type="file">
  <label class="w3-label w3-validate">Photo</label></p>
  <p>
  <button class="w3-btn w3-section w3-teal w3-ripple"> Modify </button></p>
</form>

</body>
</html>

<%})%>